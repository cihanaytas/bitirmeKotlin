<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.GirisFragment">


    <EditText
        android:id="@+id/kullaniciParola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:hint="Parola"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/kullaniciAdi"
        app:layout_constraintTop_toBottomOf="@+id/kullaniciAdi" />

    <EditText
        android:id="@+id/kullaniciAdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="136dp"
        android:ems="10"
        android:hint="Kullanıcı Adı"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonGiris"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:layout_marginTop="64dp"
        android:text="Giriş"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/kullaniciParola"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonKayit"
        android:layout_width="91dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="224dp"
        android:layout_marginBottom="41dp"
        android:text="Kayıt Ol"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/buttonGiris"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxRemember" />

    <CheckBox
        android:id="@+id/checkBoxRemember"
        android:layout_width="196dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="282dp"
        android:text="Hatırla"
        app:layout_constraintBottom_toTopOf="@+id/buttonGiris"
        app:layout_constraintStart_toStartOf="@+id/kullaniciParola"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.227" />


</androidx.constraintlayout.widget.ConstraintLayout>