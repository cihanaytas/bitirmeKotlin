<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PasswordForgotFragment">


    <EditText
        android:id="@+id/pfUsername"
        android:layout_width="236dp"
        android:layout_height="46dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_baseline_person_pin_24"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pfB3"
        android:layout_width="220dp"
        android:layout_height="44dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="168dp"
        android:background="@drawable/round_bg"
        android:text="Onayla"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/pfUsername"
        app:layout_constraintTop_toBottomOf="@+id/pfUsername" />

    <EditText
        android:id="@+id/pfParola"
        android:layout_width="237dp"
        android:layout_height="44dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_baseline_vpn_key_24"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="@+id/pfUsername"
        app:layout_constraintTop_toBottomOf="@+id/pfUsername" />

</androidx.constraintlayout.widget.ConstraintLayout>